{
    "version": "0.1.2",
    "description": "MetaphorJs pushState stateless implementation",

    "push": [
        "github"
    ],
    "build": {
        "standalone": {
            "target": "dist/metaphorjs.history.js",
            "files": [
                ["src/lib/History.js", {"as": "history"}]
            ],
            "options": {
                "wrap": true,
                "global": true,
                "expose": [
                    "history"
                ]
            }
        },

        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.history.min.js",
            "pipe": ["build", "compile", "write"]
        },
        
        "amd": {
            "target": "dist/metaphorjs.history.amd.js",
            "files": [
                ["src/lib/History.js", {"as": "history"}]
            ],
            "omit": [
                "metaphorjs-observable/src/lib/Observable.js"
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-history",
                    "return": "history",
                    "deps": {
                        "metaphorjs-observable": "Observable"
                    }
                }
            }   
        },

        "amd-min": {
            "extend": "amd",
            "target": "dist/metaphorjs.history.amd.min.js",
            "pipe": ["build", "compile", "write"]
        }
    }
}